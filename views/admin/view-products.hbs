<section>
    <div class="container">
        <div class="row mt-4">
            <a href="admin/add-product" class="btn btn-success ml-auto">add product</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr align="center">
                    <th scope="col">No:</th>
                    <th scope="col">image</th>
                    <th scope="col">title</th>
                    <th scope="col">catogery</th>
                    <th scope="col">discription</th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}
                <tr align="center">
                    <th scope="row">1</th>
                    <td><img style="width: 40px; height: 40px" src="/product-images/{{_id}}.jpg"></td>
                    <td>{{this.name}}</td>
                    <td>{{this.catagory}}</td>
                    <td>{{this.discription}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>